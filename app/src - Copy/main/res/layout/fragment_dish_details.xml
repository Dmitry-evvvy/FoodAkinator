<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.details.DishDetailsFragment">

    <TextView
        android:id="@+id/dish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dish Name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/dish_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dish description"
        android:textSize="16sp"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/cuisine_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cuisine: Italian"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/prep_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prep time: 30 minutes"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/vegetarian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vegetarian: Yes"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/vegan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vegan: No"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/gluten_free"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gluten-free: No"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/spicy_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spicy level: Mild"
        android:textSize="14sp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back" />

</LinearLayout>